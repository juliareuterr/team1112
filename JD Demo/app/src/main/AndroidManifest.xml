<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peter.wagstaff.jddemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.peter.wagstaff.jddemo.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoBar">

        <activity android:name="com.peter.wagstaff.jddemo.activities.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.peter.wagstaff.jddemo.activities.SignupActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.peter.wagstaff.jddemo.activities.ResetPasswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.peter.wagstaff.jddemo.activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.peter.wagstaff.jddemo.activities.ProfileActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.peter.wagstaff.jddemo.activities.SecretsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
    </application>
</manifest>
